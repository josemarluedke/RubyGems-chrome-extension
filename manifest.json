{
  "name": "RubyGems",
  "version": "1.0",
  "manifest_version": 2,
  "description": "RubyGems Search",
  "icons": {
    "48": "images/icon.png"
  },
  "permissions": [
    "tabs",
    "contextMenus",
    "https://rubygems.org/*"
  ],
  "omnibox": {
    "keyword": "gem"
   },
  "background": {
    "persistent": false,
    "scripts": [
      "javascripts/libs/jquery.min.js",
      "javascripts/app/core.js",
      "javascripts/app/background.js"
    ]
  },
  "browser_action": {
    "default_icon": "images/icon.png",
    "default_title": "RubyGems",
    "default_popup": "popup.html"
  },
  "options_page": "options.html"
}
